/* components/list.wxss */

.list {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  font-size: 30rpx;

}

.list .label {
  padding:0 20rpx;
}

.list .item {
  display: flex;
  align-items: center;
  min-width: 100rpx;
  justify-content: center;
  padding: 10rpx;
  margin: 0 20rpx;
  color:#ccbeb5;
  border: 3rpx solid #ccbeb5;
  border-radius: 20rpx;
}

.list .item.active {
  color:#fff;
  background: #ccbeb5;
}