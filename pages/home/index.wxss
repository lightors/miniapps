/* pages/home/index.wxss */
@import '../../assets/iconfont/iconfont.wxss';


swiper {
  height:400rpx;
  width: 100vw;
}

swiper image {
  width: 100vw;
}

.active {
  background-color: red;
}

.shadow {
  position: fixed;
  top:0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.5);

}

.shadow .main {
  width:45vw;
  height:50vw;
}


.shadow .close {
  position: absolute;
  right:20vw;
  top:20vh;
  border:1px solid #2b2b2b;
  color:#ccc;
  border-radius: 50%;
  width:40rpx;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;

}


.menu .iconfont {
  border: 3rpx sienna solid;
  color:sienna;
  width: 60rpx;
  height:60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}