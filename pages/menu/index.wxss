/* pages/menu/index.wxss */
.foot {
  position: fixed;
  width: 100vw;
  bottom: 0;
  
}

.nav {
  position: relative;
  margin: 10rpx 0;
  height:100rpx;
}

.left {
  position: absolute;
  left: 0;
  padding:0 20rpx;
  height:100rpx;
  
}

/* .right {
  
