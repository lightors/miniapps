.btn {
  position: absolute;
  right: 0;
  height:100rpx;
  border: 4rpx solid #82a5d3;
  width: 180rpx;
  padding: 4rpx;
  color: #82a5d3;
  border-radius: 50rpx;
  font-size: 28rpx
}

.right view {
  flex: 1;
  text-align: center;
  color:#82a5d3
}

.right view.active {
  background: #82a5d3;
  display: flex;
  color:#fff;
  height: 100%;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  
}

image {
  width: 100%;
  margin: 20rpx 0;
}

