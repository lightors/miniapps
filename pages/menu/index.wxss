/* pages/menu/index.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.nav {
  position: relative;
  margin: 10rpx 0;
  height:100rpx;
}

.left {
  position: absolute;
  left: 0;
  top: 20rpx;
  padding:0 20rpx;
  height:100rpx;
  
}

/* .right {
  
} */


.btn {
  position: absolute;
  right: 0;
  top:10rpx;
  height:80rpx;
  border: 4rpx solid #82a5d3;
  width: 180rpx;
  padding: 4rpx;
  color: #82a5d3;
  border-radius: 50rpx;
  font-size: 28rpx
}

.right view {
  flex: 1;
  text-align: center;
  color:#82a5d3
}

.right view.active {
  background: #82a5d3;
  display: flex;
  color:#fff;
  height: 100%;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  
}

image {
  width: 100%;
  margin: 20rpx 0 0;
  height: 480rpx;
}


.main {
  /* background: red; */
  /* flex: calc(100vh - 620rpx); */
  flex: 1;
  display: flex;
}


.menu {
  width: 200rpx;
   /* color: #f5f5f6; */
  text-align: center;
}

.menu .item {
  padding: 20rpx 0 ;
  color: #999;
  font-size: 28rpx;
   border-left:10rpx solid transparent;
 
}

.menu .item.active {
  background: #fff;
  color: #000;
  border-left-color:#82a5d3;
}

